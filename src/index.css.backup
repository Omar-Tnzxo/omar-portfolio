      -1.8em -1.8em 0 0em #ffffff;
  }
}

/* ===== CUSTOM SCROLLBAR ===== */
/* Webkit browsers (Chrome, Safari, Edge) */
::-webkit-scrollbar {
  width: 12px;
  height: 12px;
}

::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #915EFF 0%, #7c4dff 50%, #6b3dff 100%);
  border-radius: 10px;
  border: 2px solid rgba(0, 0, 0, 0.1);
  box-shadow: 
    0 4px 15px rgba(145, 94, 255, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #a675ff 0%, #8f5eff 50%, #7d4eff 100%);
  box-shadow: 
    0 6px 20px rgba(145, 94, 255, 0.4),
    inset 0 1px 0 rgba(255, 255, 255, 0.3);
  transform: scale(1.05);
}

::-webkit-scrollbar-thumb:active {
  background: linear-gradient(135deg, #7c4dff 0%, #6b3dff 50%, #5a2dff 100%);
  box-shadow: 
    0 2px 10px rgba(145, 94, 255, 0.5),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

::-webkit-scrollbar-corner {
  background: rgba(0, 0, 0, 0.1);
  border-radius: 10px;
}

/* Firefox */
* {
  scrollbar-width: thin;
  scrollbar-color: #915EFF rgba(0, 0, 0, 0.1);
}

/* Custom scrollbar for specific elements */
.custom-scrollbar {
  scrollbar-width: thin;
  scrollbar-color: #915EFF rgba(0, 0, 0, 0.1);
}

.custom-scrollbar::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

.custom-scrollbar::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.05);
  border-radius: 6px;
}

.custom-scrollbar::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #915EFF 0%, #7c4dff 100%);
  border-radius: 6px;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.custom-scrollbar::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(135deg, #a675ff 0%, #8f5eff 100%);
}

/* Smooth scroll behavior */
html {
  scroll-behavior: smooth;
}

/* Custom scrollbar animation */
@keyframes scrollbarGlow {
  0%, 100% {
    box-shadow: 
      0 4px 15px rgba(145, 94, 255, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }
  50% {
    box-shadow: 
      0 6px 25px rgba(145, 94, 255, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
  }
}

::-webkit-scrollbar-thumb {
  animation: scrollbarGlow 3s ease-in-out infinite;
}

/* Hide scrollbar on mobile devices */
@media (max-width: 768px) {
  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }
  
  ::-webkit-scrollbar-thumb {
    border-radius: 6px;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }
}

/* Dark mode scrollbar */
@media (prefers-color-scheme: dark) {
  ::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  ::-webkit-scrollbar-corner {
    background: rgba(255, 255, 255, 0.05);
  }
}

